{
  "$schema": "https://json.schemastore.org/jest.json",
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleNameMapper": {
    "@core(/?.*)": "<rootDir>/core$1"
  },
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "@swc/jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!*.module.ts"
  ],
  "coverageDirectory": "../coverage"
}
